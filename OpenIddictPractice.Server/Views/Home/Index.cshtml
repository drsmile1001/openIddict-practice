@using Microsoft.AspNetCore.Identity
@using OpenIddictPractice.Server.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Home</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>

<body>
    <h1>Home</h1>
    @if (SignInManager.IsSignedIn(User))
    {
        <h2>Logged in! Wellcome @UserManager.GetUserName(User)!</h2>
        <form asp-controller="Account" asp-action="LogOff" method="POST">
            <button type="submit">Log off</button>
        </form>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login">Log in</a>
    }

</body>

</html>