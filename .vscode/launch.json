{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug server",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-server",
      "program": "${workspaceFolder}/Server/bin/Debug/net5.0/OpenIddicPractice.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Server",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Server/Views"
      },
      "console": "externalTerminal"
    },
    {
      "name": "debug client server worker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-client-server-worker",
      "program": "${workspaceFolder}/Client.ServerWorker/bin/Debug/net5.0/OpenIddicPractice.Client.ServerWorker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Client.ServerWorker",
      "stopAtEntry": false,
      "console": "externalTerminal"
    },
    {
      "name": "debug resource-api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-resource-api",
      "program": "${workspaceFolder}/OpenIddictPractice.ResourceAPI/bin/Debug/net5.0/OpenIddictPractice.ResourceAPI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/OpenIddictPractice.ResourceAPI",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5002/"
      },
      "console": "externalTerminal"
    }
  ]
}
